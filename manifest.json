{
  "manifest_version": 2,
  "name": "Audio Capture Extension",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage",
    "tabCapture"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
